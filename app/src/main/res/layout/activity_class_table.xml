<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ClassTableActivity">
    <include layout="@layout/layout_comon_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ListView
        android:id="@+id/week_list"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@color/common_gray10"
        android:layout_height="wrap_content">

    </ListView>
    <ListView
        android:id="@+id/table_list"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/commend_padding"
        android:layout_height="wrap_content">

    </ListView>
    </LinearLayout>
</LinearLayout>